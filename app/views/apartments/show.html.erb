<div class="container">

  <div class="row">
    <div class="col-xs-12">
      <div class="apartment-photo-collage">
        <% unless @apartment.photos.nil? %>
          <img src=<%= @apartment.photos%> width="200" height="200" >
        <% else %>
          <%=cl_image_tag(@apartment.upload_photos) unless @apartment.upload_photos.blank? %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <div class="apartment-controls">
        <div class="btn">
          <%= link_to "Edit", edit_apartment_path %>
        </div>
        <div class="btn">
         <%= link_to "Delete", apartment_path,
            method: :delete,
            data: { confirm: "Are you sure?" } %>
        </div>
        <div class="btn">
          <%= link_to "Book this apartment", new_booking_path({apartment_id: @apartment.id}) %>
        </div>
        <div class="btn">
          <%= link_to "Return To All", apartments_path %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <div class="apartment-details">
        <h1> <%= @apartment.name %></h1>
        <p>Here is a description of your apartment: </p>
        <p> Name: <%=  @apartment.name %> </p>
        <p> Price: <%=  @apartment.price_per_day %></p>
        <p> Theme: <%=  @apartment.category %></p>
        <p> Location: <%=  @apartment.description %></p>
        <p> Location: <%=  @apartment.location %></p>
      </div>
    </div>

    <div class="col-xs-12 col-sm-6">
      <div class="apartment-booking-form">
        <%= render "booking_form" %>
      </div>
    </div>
  </div>

</div>
