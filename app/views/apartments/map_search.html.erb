<% @apartments.each do |apartment|%>
 <ul>
  <li><%= apartment.name %></li>
  <li><%= apartment.address %></li>
  <li><%= apartment.latitude %></li>
  <li><%= apartment.longitude %></li>
  </ul>
<% end %>

<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
