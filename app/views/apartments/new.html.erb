<h1>Make a New Apartment</h1>
<p>Add all the information you would like renters to know: </p>

<%= simple_form_for @apartment do |f| %>
  <div class= "form-inputs">
    <%= f.input :price_per_day%>
    <%= f.input :category%>
    <%= f.input :name%>
    <%= f.input :description%>
    <%= f.input :location%>
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit%>
  <% end %>
  </div>

  <%= link_to "Return to All Apartments", apartments_path %>
