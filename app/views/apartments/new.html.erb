<style>
  label {color: black;}
  h1 {text-align: center;}
</style>
<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <h1 class="black-font" >Make a New Apartment</h1>
      <p>Add all the information you would like renters to know: </p>

      <%= simple_form_for @apartment do |f| %>
        <div class= "form-inputs">
          <%= f.input :price_per_day%>
          <%= f.input :category, collection: ["arts", "sports", "science", "business"]%>
          <%= f.input :name%>
          <%= f.input :description%>
          <%= f.input :location%>
          <%= f.input :upload_photos%>
          <%= f.input :upload_photos_cache, as: :hidden%>
          <%= f.hidden_field :user_id, value: current_user.id %>
        </div>

        <div class="form-actions" style="color: black;">
          <%= f.button :submit%>
        <% end %>
        </div>

        <%= link_to "Return to All Apartments", apartments_path %>
    </div>
  </div>
</div>
