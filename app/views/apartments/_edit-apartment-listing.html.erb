<h1>Modify <%= @apartment.name %></h1>
<p>Please make your modifications and press update</p>


<%= simple_form_for @apartment do |f| %>
  <div class= "form-inputs">
    <%= f.input :price_per_day%>
    <%= f.input :category%>
    <%= f.input :name%>
    <%= f.input :description%>
    <%= f.input :address%>
    <%= f.file_field :upload_photos%>
    <%= f.input :upload_photos_cache, as: :hidden%>
    <%= f.submit %>
  </div>

  <div class="form-actions" >
  <% end %>
  </div>
